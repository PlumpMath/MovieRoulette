<Application x:Class="MovieRoulette.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml"
             Startup="Application_Startup"
             Exit="App_Exit"
             DispatcherUnhandledException="DispatcherUnhandledException_Handle">
    <Application.Resources>
        <Style TargetType="Window">
            <Setter Property="Opacity" Value=".65" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#999999" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Opacity" Value=".80" />
        </Style>
        <Style TargetType="ListBox">
            <Style.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="White" />
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" Color="#999999" />
            </Style.Resources>
            <Setter Property="Background" Value="#999999" />
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="Opacity" Value=".80" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="Opacity" Value=".80" />
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="Opacity" Value=".80" />
        </Style>
        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#FFFFFFFF" />
            <Setter Property="Opacity" Value=".80" />
        </Style>
        <Style TargetType="Button">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="border" 
                            BorderThickness="1"
                            Padding="4,2" 
                            BorderBrush="DarkGray" 
                            CornerRadius="3" 
                            Background="#999999">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="Black" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Opacity" Value=".80" />
            <EventSetter Event="MouseEnter" Handler="HoverHandler" />
            <EventSetter Event="MouseLeave" Handler="HoverOut" />
        </Style>
    </Application.Resources>
</Application>
